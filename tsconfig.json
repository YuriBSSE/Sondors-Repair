{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "typeRoots": ["./src/types"],
    "paths": {
      "assets/*": ["./assets/*"],
      "atoms/*": ["./src/atoms/*"],
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "screens/*": ["./src/screens/*"],
      "styles/*": ["./src/styles/*"],
      "types/*": ["./src/types/*"],
      "utilities/*": ["./src/utilities/*"]
    }
  }
}
